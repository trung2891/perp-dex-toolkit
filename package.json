{
  "name": "perp-dex-toolkit",
  "version": "1.0.0",
  "description": "Modular multi-exchange trading toolkit for perpetual futures trading",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "db:generate": "prisma generate --schema=src/db/schema.prisma",
    "db:push": "prisma db push --schema=src/db/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/db/schema.prisma",
    "db:studio": "prisma studio --schema=src/db/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@oraichain/lighter-ts-sdk": "^1.0.9",
    "@prisma/client": "^5.19.0",
    "dotenv": "^17.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.5",
    "prisma": "^5.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
